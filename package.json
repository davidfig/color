{
  "name": "yy-color",
  "version": "1.0.5",
  "description": "color javascript library",
  "main": "color.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs": "node_modules/.bin/jsdoc2md --template README.hbs *.js > README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/davidfig/color.git"
  },
  "author": "david figatner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidfig/color/issues"
  },
  "homepage": "https://github.com/davidfig/color#readme",
  "devDependencies": {
    "jsdoc-to-markdown": "^1.3.7"
  },
  "dependencies": {
    "yy-random": "^1.0.1"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true
    },
    "parserOptions": {},
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-undef": 1,
      "no-unused-vars": 1
    },
    "globals": {
      "PIXI": true,
      "document": true,
      "window": true,
      "debug": true,
      "debugOne": true,
      "console": true
    }
  }
}
